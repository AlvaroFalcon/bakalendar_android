<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bakalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/design_default_color_error</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/main_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/SearchInputLayoutStyle</item>
    </style>
    <style name="Searching" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/textInputLayoutHint</item>
    </style>

</resources>